<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.mariner"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->
    
    <icon src="icon.png" />

    <name>Mariner Weather App</name>

    <description>
        A weather applications specifically for fishing and boating. Specifically offering multiple point marine, tide and astronomical forecasts.
    </description>

    <author href="http://www.jeffdevelops.com" email="jeff@jeffdevelops.com">
        Jeff Stewart 
    </author>
    
    <!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires.
	<preference name="permissions" value="none"/> -->

	<!-- to enable individual permissions use the following examples -->
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

</widget>
